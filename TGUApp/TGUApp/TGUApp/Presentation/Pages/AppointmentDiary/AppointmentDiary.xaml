<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:view="clr-namespace:TGUApp.Presentation.Views.Shared"
             x:Class="TGUApp.Presentation.Pages.AppointmentDiary.AppointmentDiary"
             NavigationPage.HasNavigationBar="False" BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource StackStyle}">
            <view:NavBar MinimumHeightRequest="50" HorizontalOptions="FillAndExpand" BackButtonState="Visible"  MenuButtonState="Visible"></view:NavBar>
            <view:Heading x:Name="Heading" MainTitle="Your Appointments" HorizontalOptions="Center"></view:Heading>
            <StackLayout Orientation="Horizontal" Margin="0, 5, 0, 0">
                <Label Text="When" TextColor="LightBlue" FontAttributes="Bold" WidthRequest="100" />
                <Label Text="Who With" TextColor="LightBlue" FontAttributes="Bold" WidthRequest="100" />
                <Label Text="Where" TextColor="LightBlue" FontAttributes="Bold" />
            </StackLayout>
            <StackLayout x:Name="Appointments"></StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>