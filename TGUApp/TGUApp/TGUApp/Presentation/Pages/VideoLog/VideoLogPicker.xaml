<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TGUApp.Presentation.Pages.VideoLog.VideoLogPicker"
             xmlns:view="clr-namespace:TGUApp.Presentation.Views.Shared"
             NavigationPage.HasNavigationBar="False" BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource StackStyle}">
            <view:NavBar MinimumHeightRequest="50" HorizontalOptions="FillAndExpand" BackButtonState="Visible" MenuButtonState="Hidden"></view:NavBar>
            <view:Heading x:Name="Heading" MainTitle="Video Log Videos" HorizontalOptions="Center"></view:Heading>
            <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <StackLayout x:Name="Videos" HorizontalOptions="FillAndExpand"></StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>