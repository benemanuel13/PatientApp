@using TGUWeb.Models.WebApiModels;
@model Challenge

<h3>@Model.Title</h3>

<div class="row">
    <div class="col-md-2" style="font-weight:bold;">
        Category:
    </div>
    <div class="col-md-2">
        @Model.Category
    </div>
    <div class="col-md-1">
        <a style="cursor: pointer;">Edit</a>
    </div>
</div>
<div class="row">
    <div class="col-md-2" style="font-weight:bold;">
        Sub Category:
    </div>
    <div class="col-md-2">
        @Model.SubCategory
    </div>
    <div class="col-md-1">
        <a style="cursor: pointer;">Edit</a>
    </div>
</div>

<br />

@foreach (Intervention intervention in Model.Interventions)
{
    @Html.Partial("_Intervention", intervention);
    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-1">
            <button>Delete Intervention</button>
        </div>
    </div>
}
<br />
<div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-1">
        <button>Add Intervention</button>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-6">
        <hr />
    </div>
</div>
